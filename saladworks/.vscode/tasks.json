{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Rust Tests",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Build Rust Project",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Run Saladworks App",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--bin",
                "saladworks_app"
            ],
            "group": "none"
        }
    ]
}